{
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": false,
    "outDir": "dist",                          
    "rootDir": "",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
